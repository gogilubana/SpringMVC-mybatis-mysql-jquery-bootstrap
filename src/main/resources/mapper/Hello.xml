<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="Hello">

    <resultMap id="result" type="Hello">
        <result property="id" column="id"/>
        <result property="name" column="name"/>   
    </resultMap>
 
    <select id="selectAll" resultMap="result">
        SELECT * FROM greet1;
    </select>
    
 	<select id="selectById" parameterType="int" resultMap="result">
        SELECT * FROM greet1 WHERE id = #{id}
    </select>
    
    <select id="selectNameById" parameterType="int" resultMap="result">
        SELECT name FROM greet1 WHERE id = #{id}
    </select>
    
 	<insert id="insert" parameterType="Hello" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO greet1 (name) VALUES (#{name});
    </insert>
    
    <update id="update" parameterType="Hello">
        UPDATE greet1
        SET name = #{name}
        WHERE id = #{id}
  	</update>
 
	<delete id="delete" parameterType="int">
        DELETE from greet1 WHERE id = #{id}
    </delete>
</mapper>